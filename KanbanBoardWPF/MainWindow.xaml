<Window x:Class="KanbanBoardWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanBoardWPF"
        mc:Ignorable="d"
        Title="Kanban Board" Height="800" Width="1200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
  
        <Grid>
            
            <Canvas x:Name="canvas" Margin="20" >
            <Grid x:Name="grid" Canvas.Left="25" Canvas.Top="25" Height="200" Width="300">
                <Grid.RowDefinitions >
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            </Grid>
            </Canvas>
           
        </Grid>
       
    
</Window>
